void setup() {
  // Set the RGB pins to output
  pinMode(RED_PIN, OUTPUT);
  pinMode(GREEN_PIN, OUTPUT);
  pinMode(BLUE_PIN, OUTPUT);
  pinMode(BRAKE_PIN, OUTPUT);
  pinMode(BUTTON_PIN, INPUT_PULLUP);
  attachInterrupt(digitalPinToInterrupt(BUTTON_PIN), mode_switch, FALLING);
  startupFlash();
  Serial.begin(9600);
  delay(100);
}

void loop() {
  EVERY_N_MILLISECONDS(1000) {
    poll_track();
  }

  EVERY_N_MILLISECONDS(100) {
    // brake light
    uint8_t* brake_data = monza_brake_data;
    if (BUTTON_MODE == RAINBOW || BUTTON_MODE == NO_LIGHT) {
      analogWrite(BRAKE_PIN, 0);
      return;
    }
    if (TRACK_MODE == MONZA) {
      brake_data = monza_brake_data;
    }
    if (TRACK_MODE == MONACO) {
      brake_data = monaco_brake_data;
    }
    else {
      brake_data = spa_brake_data;
    }

    if (brake_light_ctr > BRAKE_DATA_LEN) {
      brake_light_ctr = 0;
    }
    if (brake_data[brake_light_ctr] == 1) {
      // Serial.println("high");
      analogWrite(BRAKE_PIN, MAX_BRIGHTNESS);
    } else {
      // Serial.print("low");
      analogWrite(BRAKE_PIN, 0);
    }
    brake_light_ctr += 1;
  }


  EVERY_N_MILLISECONDS(10) {
    // choose brightness and change RGB color
    brightness = getBrightness();
    if (BUTTON_MODE == RAINBOW) {
      uint8_t hue = beat8(hue_delta, 255);
      fill_rainbow(leds, 1, hue, hue_delta);     
    } else {
      // track-based
      if (TRACK_MODE == MONZA) {
        fill_solid(leds,1,CRGB::Green);
      } else if (TRACK_MODE == MONACO) {
        fill_solid(leds,1,CRGB::Red);
      } else {
        // spa
        fill_solid(leds,1,CRGB::Purple);
      }
    }
    // Serial.println(brightness);
    outputRGB(leds[0], brightness);  // update the LED display
  } 

  delay(10);
}


void poll_track() {
  int val = analogRead(TRACK_PIN);
  float voltage = val * (5.0 / 1023.0);
  if (voltage > 2.5) {
    TRACK_MODE = MONACO;
  } else if (voltage <= 2.5 && voltage > 2.0) {
    TRACK_MODE = SPA;
  } else {
    TRACK_MODE = MONZA;
  }
  // Serial.println(voltage);
}

float getBrightness() {
  int val = analogRead(PHOTO_PIN);  // read the input pin
  float toReturn = val * 1.0 / (LIGHT_RANGE);  // will be offset by +DARK so it never goes truly to 0
  // Serial.println(val);          // debug value
  // Serial.println(toReturn);  // prints brightness
  return min(1.0, toReturn);
}

// Output the given color settings
void outputRGB(const CRGB& rgb, float bright_modifier) {
  //Note: scale8 is used to adjust values based on BRIGHTNESS
  uint8_t bright = (int) (bright_modifier * MAX_BRIGHTNESS);
  // Serial.println(bright);
  // Serial.println(bright_modifier);
  analogWrite(RED_PIN,   scale8(rgb.r, bright) );  //for common cathode
  analogWrite(GREEN_PIN, scale8(rgb.g, bright) );
  analogWrite(BLUE_PIN,  scale8(rgb.b, bright) );
}

// Flash every LED color in sequence to prove that it works
void startupFlash() {
  fill_solid(leds,1,CRGB::Red);
  outputRGB(leds[0], 1); delay(1500);
  fill_solid(leds,1,CRGB::Green);
  outputRGB(leds[0], 1); delay(1500);
  fill_solid(leds,1,CRGB::Blue);  
  outputRGB(leds[0], 1); delay(1500);
}

void mode_switch() {
  if ((millis() - last_debounce) > DEBOUNCE_DELAY) {
    // Serial.println("debounced button press");
    last_debounce = millis();
    BUTTON_MODE += 1;
    if (BUTTON_MODE > B_LIGHT) {
      BUTTON_MODE = RAINBOW;
    }
    brake_light_ctr = 0;  // reset course
    if (BUTTON_MODE == RAINBOW) {
      Serial.println("Rainbow");
    } else if (BUTTON_MODE == B_LIGHT) {
      Serial.println("Track - w/ brake light");
    } else {
      Serial.println("Track - no brake light");
    }
  }
}